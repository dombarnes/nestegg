var ctx = document.getElementById("monthlyCategories");
var data = {
  labels: <%=raw @transactions.map {|l| Category.find(l[:category_id]).name } %>,
  datasets: [
    {
      label: "My First dataset",
      backgroundColor: [],
      borderColor: [
        'rgba(255,99,132,1)',
        'rgba(54, 162, 235, 1)',
        'rgba(255, 206, 86, 1)',
        'rgba(75, 192, 192, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(255, 159, 64, 1)'
      ],
      borderWidth: 1,
      data: <%= @transactions.map { |n| n[:total].to_f } %>,
    }
  ]
};
var options = {
  responsive: false,
  maintainAspectRatio: false,
  scales: {
    xAxes: [{
      stacked: false,
      gridLines: {
        display: false
      },
      ticks: {
        autoSkip: false,
        maxRotation: 90,
        minRotation: 90,
      }
    }],
    yAxes: [{
      // ticks: {
      //   min: 0,
      //   stepSize: 10
      // }
    }]
  }
};
var monthlyCategories = new Chart(ctx, {
    type: 'bar',
    data: data,
    options: options
});
