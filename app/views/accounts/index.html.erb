<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>
<p><%= link_to 'Add Account', new_account_path %>

<table>
  <thead>
    <tr class="table-row-heading">
      <th>Name</th>
      <th>Balance</th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr class="table-row" data-link="<%= account_path(account) %>">
        <td class="table-cell"><%= account.name %> - <small><%= account.organisation %></small></td>
        <td class="table-cell currency"><%= number_to_currency_gb(account.account_total) %></td>
      </tr>
    <% end %>
    <tfoot>
      <tr>
        <td>Net Worth</td>
        <td><%= number_to_currency_gb(@net_worth) %></td>
      </tr>
    </tfoot>
  </tbody>
</table>

<br>

