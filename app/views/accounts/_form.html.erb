<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :organisation %>
    <%= f.input :opening_balance %>
    <%= f.input :account_type, collection: Account::ACCOUNT_TYPE %>
    <%= f.input :overdraft %>
    <%= f.input :credit_interest %>
    <%= f.input :debit_interest %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
