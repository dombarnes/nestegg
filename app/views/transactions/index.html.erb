<p id="notice"><%= notice %></p>
<%= link_to "Back to accounts", accounts_path %>
<h1><%= @account.name.capitalize %> Transactions</h1>
<h2>Balance</h2>Â£<%= @account.balance %>
<p><%= link_to 'New Transaction', new_account_transaction_path %>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @transactions.blank? %>
      <tr>
        <td colspan="7">There are no transactions to show.</td>
    <% else %>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.date %></td>
          <td><%= transaction.description %></td>
          <td><%= transaction.amount %></td>
          <td><%= transaction.category_id %></td>
          <td><%= link_to 'Show', [@account, transaction] %></td>
          <td><%= link_to 'Edit', edit_account_transaction_path(@account, transaction) %></td>
          <td><%= link_to 'Destroy', [@account, transaction], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<h2>Import from CSV</h2>
<p>Import transactions from your bank's download facilities.
<%= form_tag import_account_transactions_path, multipart: true do %> 
  <%= check_box_tag headers %><%= label_tag "This file has header rows" %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

